// Menu
// --------------------------------------------------
.menu {
  margin-top: 20px;
  padding-left: 0;
  text-align: center;
  background: rgba(255,255,255,0.65);
  margin-left: auto;
  margin-right: auto;
  width:450px;
  border-radius: initial;

}

.menu .menu-item {
  display: inline-block;
  margin: 0 10px;
  list-style: none;

  @media screen and (max-width: 767px) {
    margin-top: 10px;
  }

  a {
    display: block;
    font-size: 16px;
    text-transform: capitalize;
//    font-size: 13px;
    line-height: inherit;
    border-bottom: 1px solid $menu-link-border;
    transition-property: border-color;
    the-transition();

    &:hover {
      border-bottom-color: $menu-link-hover-border;
      color: $menu-link-hover-border;
    }
  }

  .fa { margin-right: 5px; }
}

.use-motion .menu-item { opacity: 0; }
